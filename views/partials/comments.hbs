<div class="comment-section">
  <div class="postHeader">
    <div class="postHeaderLeft commentUser">
      <img src="images/pfp.png" class="pfp" alt="" />
      <span class="postUsername">u/{{author}}</span>
      <span class="postTime"> 12 hours ago</span>
    </div>
    <!-- Right Side: Kebab Menu Icon -->
    <div class="postHeaderRight" style="flex-direction: column;">
      <div class="dropdown-container">
        <button
          class="actionButton kebabMenu"
          aria-label="More options"
          style=" margin-left: auto;"
          onclick="toggleCommentDropdownVisibility('{{_id}}')"
        >
          <!-- Kebab Icon -->
          <div class="reactionBox" style="margin-bottom: 0;">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="size-4"
            >
              <circle cx="12" cy="5" r="2" />
              <circle cx="12" cy="12" r="2" />
              <circle cx="12" cy="19" r="2" />
            </svg>
          </div>
        </button>
        <!-- DROPDOWN -->
        <div class="dropdown-comment-content-post" id="dropdown-{{_id}}">
          <div
            class="dropdown-line-post"
            onclick="toggleEditComment('{{_id}}')"
          >
            <svg
              class="dropdown-edit"
              width="20"
              height="19"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="size-6"
            >
              <path
                d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z"
              />
              <path
                d="M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z"
              />
            </svg>
            <button class="hiddenButton">Edit</button>
          </div>
          <div class="dropdown-line-post" onclick="deleteComment('{{_id}}')">
            <svg
              width="20"
              height="19"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="size-6"
            >
              <path
                fill-rule="evenodd"
                d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z"
                clip-rule="evenodd"
              />
            </svg>
            <button class="hiddenButton">Delete</button>
          </div>
        </div>
        <!-- END OF DROPDOWN -->
      </div>
    </div>
  </div>
  <div class="commentSectionText" id="commentSectionText-{{_id}}">
    <p>{{content}}</p>
  </div>
  {{! editing field thats hidden lol }}
  <div class="userComment hiddenComment" id="editComment-{{_id}}">
    <input
      type="text"
      class="searchBar commentBar"
      placeholder="Write down a comment..."
      maxlength="1000"
    />
    <button class="comment-reply" onclick="editComment('{{_id}}')">Edit</button>
  </div>
</div>